<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="com.zeligsoft.base.toolingmodel.presentation.ToolingModelModelWizardID"
            name="%_UI_ToolingModelModelWizard_label"
            class="com.zeligsoft.base.toolingmodel.presentation.ToolingModelModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/ToolingModelModelFile.gif">
         <description>%_UI_ToolingModelModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="com.zeligsoft.base.toolingmodel.presentation.ToolingModelEditorID"
            name="%_UI_ToolingModelEditor_label"
            icon="icons/full/obj16/ToolingModelModelFile.gif"
            extensions="toolingmodel"
            class="com.zeligsoft.base.toolingmodel.presentation.ToolingModelEditor"
            contributorClass="com.zeligsoft.base.toolingmodel.presentation.ToolingModelActionBarContributor">
      </editor>
   </extension>

</plugin>
