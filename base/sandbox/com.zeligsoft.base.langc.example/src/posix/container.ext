import langc;
import ZMLMM::ZML_Deployments;
import POSIX::POSIX;
import ZMLMM::ZML_Component;
import ZMLMM::ZML_Core;

extension langc::element;
extension langc::expr;
extension langc::stmt;
extension langc::type;

extension posix::name;

create ElementList genContainerFile(ComponentInterface c) :
	setName(c.componentContainerFilename())
	->addElement(c.containerStruct())
;

create Struct containerStruct(ComponentInterface c) :
	setName(c.componentContainerStructname())
;
