<plugin>
    <extension-point id="editsource" name="Edit Source Menus" schema="schema/editsource.exsd"/>
	<extension-point id="transformation" name="Transformation Mapping Registry" schema="schema/transformation.exsd"/>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.papyrus.views.modelexplorer.modelexplorer.popup">
         <menu
               id="com.zeligsoft.cx.ui.generate.menu"
               label="Generate">
            <dynamic
                  class="com.zeligsoft.cx.codegen.ui.providers.DynamicGenerateMenuProvider"
                  id="com.zeligsoft.cbdds.ui.generateDynamic">
            </dynamic>
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isCXModel"
                        value="true">
                  </test>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="cxPreferenceRoot"
            class="com.zeligsoft.cx.codegen.ui.preferences.CodegenPreferencePage"
            id="cxCodegenPreference"
            name="%prefs.page.codegen.name">
      </page>
   </extension>
   
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="cxCodegenPreference"
            class="com.zeligsoft.cx.codegen.ui.preferences.CodegenReportPreferencePage"
            id="cxCodegenReportPreference"
            name="%prefs.page.codegen.report.name">
      </page>
   </extension>
   
</plugin>
