create DataType visitAttributeType(CXAttribute attr, Any obj) :
	let corbaType = attr.idlType :
	this.kind.add(corbaType.toCDPType()) ->
	corbaType.visitSequenceType(this) ->
	corbaType.visitArrayType(this) ->
