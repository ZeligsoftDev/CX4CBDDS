create BoundedStringType visitBoundedStringType(CXString str, DataType dt) :
	dt.boundedString.add(this) ->
	this.bound.add(getBoundValue(str.bounds));

String getBoundValue(CXBound bound) :
	(bound.value != null && bound.value != "") ? 
	bound.value : 
	bound.constant.^default;
	
Void visitBoundedStringType(Object obj, DataType dt) :
	{};	
	
StructMemberType visitStructMember(CXField field) :
	let member = new StructMemberType :
	member.name.add(field.name) ->
	member.type.add(field.visitMemberType()) ->
	member;
	
DataType visitMemberType(CXField field) :
	let type = new DataType :
	type.kind.add(field.idlType.toCDPType()) ->
	field.idlType.visitSequenceType(type) ->
	field.idlType.visitArrayType(type) ->
	field.idlType.visitStructType(type) ->
	field.idlType.visitEnumType(type) ->
	field.idlType.visitBoundedStringType(type) ->
	type;
	
Void visitSequenceType(CXType type, DataType dt) :
	{};

DataType visitSequenceType(CXSequence type, DataType dt) :
	let sequence = new SequenceType :
	let seqType = new DataType :
	let corbaType = type.zdlAsDataType().ownedAttribute.selectFirst(e|e.name == "members" || e.name == "member").zdlAsProperty().type :
	seqType.kind.add(corbaType.toCDPType()) ->
	corbaType.visitStructType(seqType) ->
	corbaType.visitBoundedStringType(seqType) ->
	sequence.elementType.add(seqType) ->
	dt.sequence.add(sequence) ->
	dt;

Void visitArrayType(CXType type, DataType dt) :
	{};

DataType visitArrayType(CXArray type, DataType dt) :
	let array = new ArrayType :
	let arrayType = new DataType :
	let corbaType = type.zdlAsDataType().ownedAttribute.selectFirst(e|e.name == "members" || e.name == "member").zdlAsProperty().type :
	let bound =	type.bounds.get(0) :
	arrayType.kind.add(corbaType.toCDPType()) ->
	corbaType.visitStructType(arrayType) ->
	corbaType.visitBoundedStringType(arrayType) ->
	array.elementType.add(arrayType) ->
	array.length.add(getBoundValue(bound)) ->
	dt.array.add(array) ->
	dt;

TcKind toCDPType(String type) :
	switch(type) {
				case CXPrimitiveKind::CXWChar.literalName():
					TcKind::tkWchar
				case CXPrimitiveKind::CXVoid.literalName():
					TcKind::tkVoid
				case CXPrimitiveKind::CXUnsignedShort.literalName():
					TcKind::tkUshort
				case CXPrimitiveKind::CXUnsignedLongLong.literalName():
					TcKind::tkUlonglong
				case CXPrimitiveKind::CXUnsignedLong.literalName():
					TcKind::tkUlong
				case CXPrimitiveKind::CXShort.literalName():
					TcKind::tkShort
				case CXPrimitiveKind::CXOctet.literalName():
					TcKind::tkOctet
				case CXPrimitiveKind::CXObjectRef.literalName():
					TcKind::tkObjref
				case CXPrimitiveKind::CXLongLong.literalName():
					TcKind::tkLonglong
				case CXPrimitiveKind::CXLongDouble.literalName():
					TcKind::tkLongdouble
				case CXPrimitiveKind::CXLong.literalName():
					TcKind::tkLong
				case CXPrimitiveKind::CXFloat.literalName():
					TcKind::tkFloat
				case CXPrimitiveKind::CXDouble.literalName():
					TcKind::tkDouble
				case CXPrimitiveKind::CXChar.literalName():
					TcKind::tkChar
				case CXPrimitiveKind::CXBoolean.literalName():
					TcKind::tkBoolean
				case CXPrimitiveKind::CXAny.literalName():
					TcKind::tkAny
				case CXPrimitiveKind::CXString.literalName():
					TcKind::tkString
				case CXPrimitiveKind::CXWString.literalName():
					TcKind::tkWstring
				case CXPrimitiveKind::CXTypecode.literalName():
					TcKind::tkTypeCode
			default: TcKind::tkNull
	};

