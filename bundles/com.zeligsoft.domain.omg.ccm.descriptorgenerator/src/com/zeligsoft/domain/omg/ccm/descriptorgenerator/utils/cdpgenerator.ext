create EnumType visitEnumType(CXEnum zEnum, DataType dt) :
	dt.enum.add(this) ->
	this.name.add(zEnum.name) ->
	this.typeId.add(getRepositoryId(zEnum)) ->
	this.member.addAll(zEnum.zdlAsEnumeration().ownedLiteral.getLiteralName());
	
