<plugin>
	<extension
          point="org.eclipse.ui.menus">
       <menuContribution
             allPopups="false"
             locationURI="popup:org.eclipse.papyrus.views.modelexplorer.modelexplorer.popup">
          <menu
                id="com.zeligsoft.ddk.ui.addZDLMenu"
                label="Add ZDL">
          </menu>
       </menuContribution>
    </extension>
    
    <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:com.zeligsoft.ddk.ui.addZDLMenu">
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainBlockCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainBlock"
               label="Domain Block">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isZDLConcept"
                        value="ZDL::Constructs::DomainModel">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainSpecializationCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainSpecialization"
               label="Domain Specialization">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isZDLConcept"
                        value="ZDL::Constructs::DomainModel">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainAttributeCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainAttribute"
               label="Domain Attribute">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isZDLConcept"
                        value="ZDL::Constructs::DomainConcept">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainConstraintCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainConstraint"
               label="Domain Constraint">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isZDLConcept"
                        value="ZDL::Constructs::DomainConcept">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainConceptCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainConcept"
               label="Domain Concept">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isZDLConcept"
                        value="ZDL::Constructs::DomainBlock">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainEnumerationCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainEnumeration"
               label="Domain Enumeration">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isZDLConcept"
                        value="ZDL::Constructs::DomainBlock">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainDataTypeCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainDataType"
               label="Domain DataType">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isZDLConcept"
                        value="ZDL::Constructs::DomainBlock">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainLinkConstraintCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainLinkConstraint"
               label="Domain Link Constraint">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <or>
                     <test
                           property="com.zeligsoft.zdl.tester.isZDLConcept"
                           value="ZDL::Constructs::DomainBlock">
                     </test>
                     <test
                           property="com.zeligsoft.zdl.tester.isZDLConcept"
                           value="ZDL::Constructs::DomainConcept">
                     </test>
                  </or>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainModelLibraryCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainModelLibrary"
               label="Domain Model Library">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isZDLConcept"
                        value="ZDL::Constructs::DomainBlock">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="com.zeligsoft.ddk.zdl.ui.addDomainEnumerationLiteralCommand"
               id="com.zeligsoft.ddk.zdl.ui.addDomainEnumerationLiteral"
               label="Domain Enumeration Literal">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        property="com.zeligsoft.zdl.tester.isZDLConcept"
                        value="ZDL::Constructs::DomainEnum">
                  </test>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainBlockCommand"
            name="Domain Block">
      </command>
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainSpecializationCommand"
            name="Domain Specialization">
      </command>
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainConceptCommand"
            name="Domain Concept">
      </command>
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainDataTypeCommand"
            name="Domain DataType">
      </command>
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainEnumerationCommand"
            name="Domain Enumeration">
      </command>
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainLinkConstraintCommand"
            name="Domain Link Constraint">
      </command>
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainModelLibraryCommand"
            name="Domain Model Library">
      </command>
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainAttributeCommand"
            name="Domain Attribute">
      </command>      
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainConstraintCommand"
            name="Domain Constraint">
      </command>  
      <command
            defaultHandler="com.zeligsoft.ddk.zdl.rsm.tooling.actions.AddZDLActionHandler"
            id="com.zeligsoft.ddk.zdl.ui.addDomainEnumerationLiteralCommand"
            name="Domain Enumeration Literal">
      </command>  
   </extension>
</plugin>
