<plugin>

   <extension
         point="com.ibm.xtools.common.ui.wizards.newModelWizard">
      <category
            id="com.zeligsoft.ce.rsm.ui.wizard.category.Id"
            label="%category.label.0"/>
   </extension>
   
   <extension
         point="com.ibm.xtools.common.ui.wizards.newModelWizard">
      <templateDirectory
            path="templates/" 
            handler="com.zeligsoft.ce.rsm.ui.wizard.handlers.ZeligsoftTemplateHandler" />
      <templateConfigurationPageGroup afterMatch="equals"
			class="com.zeligsoft.ce.rsm.ui.wizard.pages.ZeligsoftTemplateConfigPageGroup"
			id="com.zeligsoft.ce.rsm.ui.wizard.pages.zeligsoftTemplateConfigPageGroupId">  
		<template ref="com.zeligsoft.ce.rsm.ui.templates.componentTemplate" match="equals"/>
	</templateConfigurationPageGroup>             
    <templateCategoryBinding
            categoryRef="com.zeligsoft.ce.rsm.ui.wizard.category.Id">
         <template
               ref="com.zeligsoft.ce.rsm.ui.templates.componentTemplate"
               match="equals"/>
      </templateCategoryBinding>
   </extension>
</plugin>
