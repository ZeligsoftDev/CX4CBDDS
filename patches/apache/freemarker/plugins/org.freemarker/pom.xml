	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
<!-- 					<pomDependencies>consider</pomDependencies> -->
					<pomDependencies>wrapAsBundle</pomDependencies>
					<filters>
						<filter>
							<type>eclipse-plugin</type>
							<id>org.jdom</id>
							<removeAll />
						</filter>
						<filter>
							<type>p2-installable-unit</type>
							<id>org.jdom</id>
							<removeAll />
						</filter>
						<filter>
							<type>java-package</type>
							<id>org.jdom</id>
							<restrictTo>
								<versionRange>[1.0,1.1)</versionRange>
							</restrictTo>
						</filter>
						<filter>
							<type>eclipse-plugin</type>
							<id>javax.servlet.jsp-api</id>
							<removeAll />
<!-- 
							<restrictTo>
								<version>2.0</version>
							</restrictTo>
 -->
						</filter>
					</filters>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<source>8</source>
					<target>8</target>
					<release>8</release>
					<encoding>UTF-8</encoding>
					<!-- <useJDK>BREE</useJDK> -->
	                <compilerArgument>-warn:+discouraged,forbidden</compilerArgument>
	                <useProjectSettings>false</useProjectSettings>
<!-- 	                <pomOnlyDependencies>consider</pomOnlyDependencies> -->
					<pomOnlyDependencies>wrapAsBundle</pomOnlyDependencies>
					<logEnabled>true</logEnabled>
					<logDirectory>${project.build.directory}/logfiles</logDirectory>
					<log>plain</log> 
					<verbose>true</verbose>
					<excludes>
						<exclude>**/freemarker/ext/beans/_EnumModels.java</exclude>
						<exclude>**/freemarker/ext/dom/SunInternalXalanXPathSupport.java</exclude>
						<exclude>**/freemarker/ext/jsp/**</exclude>
						<exclude>**/freemarker/ext/servlet/**</exclude>
						<exclude>**/freemarker/cache/WebappTemplateLoader.java</exclude>
						<exclude>**/freemarker/ext/jython/**</exclude>
						<exclude>**/freemarker/template/utility/JythonRuntime.java</exclude>
						<exclude>**/freemarker/ext/ant/**</exclude>
					</excludes>
				</configuration>
				<executions>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<configuration>
							<verbose>true</verbose>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
